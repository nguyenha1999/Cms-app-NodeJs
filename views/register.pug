doctype html
html(lang="en")
  include layout/layout
  head
  body(style='background-image: url(https://lh4.googleusercontent.com/-XplyTa1Za-I/VMSgIyAYkHI/AAAAAAAADxM/oL-rD6VP4ts/w1184-h666/Android-Lollipop-wallpapers-Google-Now-Wallpaper-2.png);')
    div.materialContainer
      div.box
        div.title Register
        if error
          div= error
        if success
          div= success
        form(action="/register" method='POST')
          div(class="input")
            label(for="email") Email
            input#email(type="text" name="email")
            span.spin
          div(class="input")
            label(for="userName") Username 
            input#userName(type="text" name="userName")
            span.spin
          div.input
            label(for="password") Password
            input#password(type="password" name="password")
            span.spin
          div.input
            label(for="confirmPassword") Confirm Password
            input#confirmPassword(type="password" name="confirmPassword")
            span.spin
          div.button
            button.login(onclick="redirectLogin('LOGIN')" )
              span Đăng Nhập
            button.regiter(type="submit" ) 
              span Đăng Kí


