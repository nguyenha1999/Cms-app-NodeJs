include ../partials/header1.pug
  body
    div(class="container")
      div(class="row d-flex justify-content-center") 
        h1#c2 Pending Posts 
      div(class="container")
        include("../partials/flash.pug")
      if posts.length == 0
        div(class='container')
          div(class="alert alert-info padbott" role='alert') Nopen ding posst 
      div(class='row')
        each post in posts 
          div(class="col-lg-4")
            div(class="card shadow p-3 mb-5 bg-white rounded")
              img(src="#{post.image}" class="card-img-top")
              div(class="card-body")
                h5(class="card-title") #{post.heading.substring(0,100)}
                  p(class="card-text") #{post.shortDescription}
                div
                  a(href="/admin/explore/#{post._id}" id="more" class="btn") Read More