form(action="/explore/#{post._id}/like" method="POST")
  div(class="btn-group mt-4")
    if currentUser && post.some(function(like){
      if like unless null 
      return like.equals(currentUser._id)
    })
      button(class="btn btn-danger")
        i(class='fas fa-heart')
    else 
      button(class='btn btn-light')
        i(class="fas fa-heart")
    if post.likes === null 
      button(class='btn btn-danger') 0 Likes 
    else 
        button(class='btn btn-danger') #{post.likes.length} Likes 
       